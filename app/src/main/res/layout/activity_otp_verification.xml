<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".OtpVerificationActivity">

    <!-- Title -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/logoAnimation"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/otpanimation" />

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoAnimation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="OTP Sent To Your Email"
        android:fontFamily="@font/gilroyextrabold"
        android:textColor="@color/PrimaryColor"
        android:textSize="25sp"
        android:textFontWeight="900"
        android:textStyle="bold" />

    <!-- OTP Input Boxes -->
    <LinearLayout
        android:id="@+id/otp_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- 6 EditText for OTP digits -->
        <EditText
            android:id="@+id/otp_box_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/edittext_background"
            android:textColor="@color/PrimaryColor"
            android:fontFamily="@font/gilroylight"
            android:textSize="18sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:importantForAccessibility="yes"
            android:imeOptions="actionNext"/>

        <EditText
            android:id="@+id/otp_box_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/edittext_background"
            android:textColor="@color/PrimaryColor"
            android:fontFamily="@font/gilroylight"
            android:textSize="18sp"
            android:imeOptions="actionNext"/>

        <EditText
            android:id="@+id/otp_box_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/edittext_background"
            android:textColor="@color/PrimaryColor"
            android:fontFamily="@font/gilroylight"
            android:textSize="18sp"
            android:imeOptions="actionNext"/>

        <EditText
            android:id="@+id/otp_box_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/edittext_background"
            android:textColor="@color/PrimaryColor"
            android:fontFamily="@font/gilroylight"
            android:textSize="18sp"
            android:imeOptions="actionNext"/>

        <EditText
            android:id="@+id/otp_box_5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/edittext_background"
            android:textColor="@color/PrimaryColor"
            android:fontFamily="@font/gilroylight"
            android:textSize="18sp"
            android:imeOptions="actionNext"/>

        <EditText
            android:id="@+id/otp_box_6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/edittext_background"
            android:textColor="@color/PrimaryColor"
            android:fontFamily="@font/gilroylight"
            android:textSize="18sp"
            android:imeOptions="actionDone"/>

    </LinearLayout>

    <Button
        android:id="@+id/verify_button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/otp_input"
        android:layout_marginTop="28dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        android:padding="12dp"
        android:fontFamily="@font/gilroylight"
        android:backgroundTint="@color/PrimaryColor"
        android:text="VERIFY"
        android:textColor="@color/SecondaryWhite"
        android:textSize="18sp"
        android:visibility="visible" />




<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="center"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:indeterminateTint="@color/SecondaryColor"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/verify_button"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp" />

        <!-- Resend OTP Button -->
        <Button
            android:id="@+id/resend_otp_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resend OTP"
            android:layout_marginTop="16dp"
            android:textColor="@color/SecondaryWhite"
            android:backgroundTint="@color/SecondaryColor"
            android:enabled="false"
            android:visibility="gone"/>


    </LinearLayout>

    <!-- Resend OTP Text -->
    <TextView
        android:id="@+id/resend_otp_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/verify_button"
        android:layout_weight="10"
        android:textColor="@color/gray"
        android:gravity="center"
        android:text="Resend OTP In 10 min"/>
</RelativeLayout>