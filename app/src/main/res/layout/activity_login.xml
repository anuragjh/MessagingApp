<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginActivity">

    <!-- Back Button -->


    <!-- Title -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/logoAnimation"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/mail" />

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoAnimation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Enter Your Email"
        android:fontFamily="@font/gilroyextrabold"
        android:textColor="@color/PrimaryColor"
        android:textSize="32sp"
        android:textFontWeight="900"
        android:textStyle="bold" />

    <!-- Email EditText -->
    <LinearLayout
        android:id="@+id/emailContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeMessage"
        android:layout_marginTop="25dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        android:background="@drawable/edittext_background"
        android:padding="8dp">

        <ImageView
            android:id="@+id/emailIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/email_icon"
            app:tint="@color/SecondaryColor" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Email"
            android:fontFamily="@font/gilroylight"
            android:textColorHint="@color/SecondaryColor"
            android:inputType="textEmailAddress"
            android:paddingStart="8dp"
            android:textColor="@color/PrimaryColor" />


    </LinearLayout>

    <Button
        android:id="@+id/sendOtpButton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailContainer"
        android:layout_marginTop="28dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        android:padding="12dp"
        android:fontFamily="@font/gilroylight"
        android:backgroundTint="@color/PrimaryColor"
        android:text="Next"
        android:textColor="@color/SecondaryWhite"
        android:textSize="18sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/otpStatusTextView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        android:padding="12dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/gilroylight"
        android:textSize="12sp"
        android:text="Status will appear here"
        android:layout_below="@id/sendOtpButton"
        />

</RelativeLayout>
